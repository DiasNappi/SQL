MYSQL PROCEDURES
----CREATING A INSERT PROCEDURE FOR A TABLE WITH 3 VARIABLES
CREATE PROCEDURE INSERT(P_NAME VARCHAR(30), 
						   P_HOURS INT(3),
						   P_VALUE FLOAT(10,2))
BEGIN
    INSERT INTO TABLE_NAME VALUES(NULL,P_NAME,P_HOURS,P_VALUES);
END
 ---- GETTING VALUES FROM ONE TABLE AND INSERTING INTO ANOTHER ONE WITH TOTAL AND AVERAGE VALUES
        FIRST TABLE(SELLER) HAS NAME AND 3 VALUES ON EACH LINE(3 MONTHS- TOTAL SELLS FROM EACH MONTH ON EACH SELLER). 
        SECOND TABLE (SELL_TOTAL)HAS NAME AND 5 VALUES(BESIDES THE MONTHS IT HAS AVERAGE AND TOTAL)

 CREATE PROCEDURE INSERTDATE()
BEGIN
	DECLARE END INT DEFAULT 0;
	DECLARE VAR1, VAR2, VAR3, VTOTAL, VAVERAGE INT;
	DECLARE VNAME VARCHAR(50);

	DECLARE REG CURSOR FOR(
	SELECT NOME, JAN, FEB, MAR FROM SELLERS
		);
	DECLARE CONTINUE HANDLER FOR NOT FOUND SET END = 1;

	OPEN REG;

	REPEAT

	FETCH REG INTO VNAME, VAR1, VAR2, VAR3;
	IF NOT END THEN
	   SET VTOTAL = VAR1+VAR2+VAR3;
	   SET VAVERAGE = VTOTAL/3;

	   INSERT INTO SELL_TOTAL VALUES(VNAME,VAR1,VAR2,VAR3,VTOTAL,VAVERAGE);
	   END IF;

	   UNTIL END END REPEAT;

	   CLOSE REG;

END
